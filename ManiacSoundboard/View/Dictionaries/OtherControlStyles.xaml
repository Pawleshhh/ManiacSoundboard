    <!--=============AppCheckBoxDefault Style=============-->
    <Style TargetType="{x:Type CheckBox}" x:Key="AppCheckBoxDefaultStyle">
        <Setter Property="Background" Value="{StaticResource AppCheckboxDefaultStyle.Static.Background}"/>
        <Setter Property="BorderBrush" Value="{StaticResource AppCheckboxDefaultStyle.Static.BorderBush}"/>
        <Setter Property="Foreground" Value="{StaticResource AppCheckboxDefaultStyle.Static.Foreground}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <Grid x:Name="templateRoot" Background="Transparent" SnapsToDevicePixels="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border x:Name="checkBoxBorder" CornerRadius="2"
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" 
                                Background="{TemplateBinding Background}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                Margin="1" VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                            <Grid x:Name="markGrid">
                                <Path x:Name="optionMark" Data="F1M9.97498,1.22334L4.6983,9.09834 4.52164,9.09834 0,5.19331 1.27664,3.52165 4.255,6.08833 8.33331,1.52588E-05 9.97498,1.22334z" Fill="#FF212121" 
                                      Margin="1" Opacity="0" Stretch="None"/>
                                <Rectangle x:Name="indeterminateMark" Fill="#FF212121" Margin="2" Opacity="0"/>
                            </Grid>
                        </Border>
                        <ContentPresenter x:Name="contentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" 
                                          Content="{TemplateBinding Content}" Grid.Column="1" 
                                          ContentStringFormat="{TemplateBinding ContentStringFormat}" 
                                          Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" 
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="HasContent" Value="True">
                            <Setter Property="FocusVisualStyle">
                                <Setter.Value>
                                    <Style>
                                        <Setter Property="Control.Template">
                                            <Setter.Value>
                                                <ControlTemplate>
                                                    <Rectangle Margin="14,0,0,0" SnapsToDevicePixels="True" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" StrokeThickness="1" StrokeDashArray="1 2"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Padding" Value="4,-1,0,0"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="checkBoxBorder"
                                    Value="{StaticResource AppCheckboxDefaultStyle.MouseOver.Background}"/>
                            <Setter Property="BorderBrush" TargetName="checkBoxBorder" 
                                    Value="{StaticResource AppCheckboxDefaultStyle.MouseOver.BorderBush}"/>
                            <Setter Property="Foreground" Value="{StaticResource AppCheckboxDefaultStyle.MouseOver.Foreground}"/>
                            <Setter Property="Fill" TargetName="optionMark" 
                                    Value="{StaticResource AppCheckboxDefaultStyle.Mark.MouseOver.Fill}"/>
                            <Setter Property="Fill" TargetName="indeterminateMark" 
                                    Value="{StaticResource AppCheckboxDefaultStyle.Mark.MouseOver.Fill}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="checkBoxBorder" 
                                    Value="{StaticResource AppCheckboxDefaultStyle.Pressed.Background}"/>
                            <Setter Property="BorderBrush" TargetName="checkBoxBorder"
                                    Value="{StaticResource AppCheckboxDefaultStyle.Pressed.BorderBush}"/>
                            <Setter Property="Foreground" Value="{StaticResource AppCheckboxDefaultStyle.Pressed.Foreground}"/>
                            <Setter Property="Fill" TargetName="optionMark" 
                                    Value="{StaticResource AppCheckboxDefaultStyle.Mark.Pressed.Fill}"/>
                            <Setter Property="Fill" TargetName="indeterminateMark" 
                                    Value="{StaticResource AppCheckboxDefaultStyle.Mark.Pressed.Fill}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Background" TargetName="checkBoxBorder" 
                                    Value="{StaticResource AppCheckboxDefaultStyle.Checked.Background}"/>
                            <Setter Property="BorderBrush" TargetName="checkBoxBorder"
                                    Value="{StaticResource AppCheckboxDefaultStyle.Checked.BorderBush}"/>
                            <Setter Property="Foreground" Value="{StaticResource AppCheckboxDefaultStyle.Checked.Foreground}"/>
                            <Setter Property="Fill" TargetName="optionMark" 
                                    Value="{StaticResource AppCheckboxDefaultStyle.Mark.Checked.Fill}"/>
                            <Setter Property="Fill" TargetName="indeterminateMark" 
                                    Value="{StaticResource AppCheckboxDefaultStyle.Mark.Checked.Fill}"/>
                            <Setter Property="Opacity" TargetName="optionMark" Value="1"/>
                            <Setter Property="Opacity" TargetName="indeterminateMark" Value="0"/>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsEnabled" Value="False"/>
                                <Condition Property="IsChecked" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" TargetName="checkBoxBorder" 
                                    Value="{StaticResource AppCheckboxDefaultStyle.Disabled.Background}"/>
                            <Setter Property="BorderBrush" TargetName="checkBoxBorder"
                                    Value="{StaticResource AppCheckboxDefaultStyle.Disabled.BorderBush}"/>
                            <Setter Property="Foreground" Value="{StaticResource AppCheckboxDefaultStyle.Disabled.Foreground}"/>
                            <Setter Property="Fill" TargetName="optionMark" 
                                    Value="{StaticResource AppCheckboxDefaultStyle.Mark.Disabled.Fill}"/>
                            <Setter Property="Fill" TargetName="indeterminateMark" 
                                    Value="{StaticResource AppCheckboxDefaultStyle.Mark.Disabled.Fill}"/>
                            <Setter Property="Opacity" TargetName="optionMark" Value="1"/>
                            <Setter Property="Opacity" TargetName="indeterminateMark" Value="0"/>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsEnabled" Value="False"/>
                                <Condition Property="IsChecked" Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" TargetName="checkBoxBorder" 
                                    Value="{StaticResource AppCheckboxDefaultStyle.Disabled.Background}"/>
                            <Setter Property="BorderBrush" TargetName="checkBoxBorder"
                                    Value="{StaticResource AppCheckboxDefaultStyle.Disabled.BorderBush}"/>
                            <Setter Property="Foreground" Value="{StaticResource AppCheckboxDefaultStyle.Disabled.Foreground}"/>
                            <Setter Property="Fill" TargetName="optionMark" 
                                    Value="{StaticResource AppCheckboxDefaultStyle.Mark.Disabled.Fill}"/>
                            <Setter Property="Fill" TargetName="indeterminateMark" 
                                    Value="{StaticResource AppCheckboxDefaultStyle.Mark.Disabled.Fill}"/>
                        </MultiTrigger>
                        <Trigger Property="IsChecked" Value="{x:Null}">
                            <Setter Property="Opacity" TargetName="optionMark" Value="0"/>
                            <Setter Property="Opacity" TargetName="indeterminateMark" Value="1"/>
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="BorderBrush" TargetName="checkBoxBorder" Value="{StaticResource AppCheckboxDefaultStyle.KeyboardFocused.Border}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
